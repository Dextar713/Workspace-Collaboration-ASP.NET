@model Discord2.Models.Group

<div class="container">
    <partial name="_TempDataPartial" />
    <form asp-action="Edit" asp-controller="Groups" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <label asp-for="Name">Group Name</label>
            <input asp-for="Name" value="@Model.Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" value="@Model.Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Edit Group</button>
    </form>
</div>
